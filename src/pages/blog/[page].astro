---
import { type CollectionEntry, getCollection } from 'astro:content';
import Pager from '../../components/Pager.astro';
import { LIMIT_POSTS } from '../../consts';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths({ paginate }) {
    const posts = await getCollection('blog');

    return paginate(posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    })), {
            pageSize : LIMIT_POSTS
        }); 
}

const { page } = Astro.props;

const posts = await getCollection('blog');
const postsPerPage = posts.sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
).reverse().slice(page.start, page.end + 1);
---

<Pager prev={page.url.prev} next={page.url.next} pages={page.lastPage} current={page.currentPage}>
    <ul>
        {
        postsPerPage.map((post) => (
        <li>
            <a href={`/blog/${post.slug}/`}>
                { post.data.heroImage && <img width={720} height={360} src={post.data.heroImage} alt={post.data.title} />}
                <h3 class="title">{post.data.title}</h3>
                <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                </p>
                <p class="description">{post.data.description}</p>
            </a>
        </li>
        ))
        }
    </ul>
</Pager>

<style>
ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
}
ul li {
    width: calc(50% - 1rem);
}
ul li * {
    text-decoration: none;
    transition: 0.2s ease;
}
ul li:first-child {
    width: 100%;
    margin-bottom: 1rem;
    text-align: center;
}
ul li:first-child img {
    width: 100%;
}
ul li:first-child .title {
    font-size: 2.369rem;
}
ul li img {
    margin-bottom: 0.5rem;
    border-radius: 12px;
}
ul li a {
    display: block;
}
.title {
    margin: 1rem 0 .5rem 0;
    color: var(--foreground-white);
    line-height: 1;
}
.date, .description {
    margin: .5rem 0;
    color: var(--gray);
    font-family: "Atkinson","monospace";
}
ul li a:hover h4,
.description {
    color: var(--foreground);
}
ul li a:hover .date {
    color: var(--blue);
}

ul a:hover img {
    box-shadow: var(--box-shadow);
}

.description {
    font-size: 1rem;
}

@media (max-width: 720px) {
    ul {
        gap: 0.5em;
    }
    ul li {
        width: 100%;
        text-align: center;
    }
    ul li:first-child {
        margin-bottom: 0;
    }
    ul li:first-child .title {
        font-size: 1.563em;
    }
}
</style>
