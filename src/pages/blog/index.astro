---
import { SITE_TITLE, SITE_DESCRIPTION, LIMIT_POSTS } from '../../consts';
import { getCollection } from 'astro:content';
import Pager from '../../components/Pager.astro';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
).reverse().slice(0, LIMIT_POSTS + 1);
---

<Pager>
    <ul>
        {
        posts.map((post) => (
        <li>
            <a href={`/blog/${post.slug}/`}>
                { post.data.heroImage && <img width={720} height={360} src={post.data.heroImage} alt={post.data.title} />}
                <h3 class="title">{post.data.title}</h3>
                <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                </p>
                <p class="description">{post.data.description}</p>
            </a>
        </li>
        ))
        }
    </ul>
    <a href="/blog/1" class="to-pages">Todos los art√≠culos</a>
</Pager>

<style>
			ul {
                width: 100%;
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}	
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 10px;
			}
			ul li a {
				display: block;
                margin: 1rem 0;
			}
			.title {
				margin: 1rem 0 .5rem 0;
				color: var(--foreground-white);
				line-height: 1;
			}
            .date, .description {
				margin: .5rem 0;
				color: var(--gray);
                font-family: "Atkinson","monospace";
			}
			ul li a:hover h4,
            .description {
				color: var(--foreground);
			}
            ul li a:hover .date {
                color: var(--blue);
            }

			ul a:hover img {
				box-shadow: var(--box-shadow);
			}

            a.to-pages {
                display: block;
                width: fit-content;
                background-color: var(--background);
                border: none;
                padding: 1rem 2rem;
                margin: 5rem auto 0rem;
                color: var(--white);
                font-size: var(--font-0);
                font-weight: bold;
                position: relative;
                border-radius: 10px;
                
                &:hover {
                    text-decoration: none;
                }

                &::before {
                    content: "";
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    z-index: -1;
                    background-image: linear-gradient(45deg, red, blue, deeppink, blue, red, blue, deeppink, blue);
                    background-size: 800%;
                    border-radius: 10px;
                    filter: blur(8px);
                    animation: glowing 40s linear infinite;
                }
            }

            @keyframes glowing {
            0% {
                background-position: 0 0;
            }
            50% {
                background-position: 400% 0;
            }
            100% {
                background-position: 0 0;
            }
            }

			@media (max-width: 720px) {	
				ul li {
					width: 100%;
					text-align: center;
				}	
            }
</style>
