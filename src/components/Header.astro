---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, IMAGES } from '../consts';

// Si cambias esto cambia en handlers/hamburger.js
const foreground = '#F5F5DC';
---

<header>
	<nav>
        <h2><a class="logo-title" href="/"><img class="icon" src=`/${IMAGES.logo}` alt={SITE_TITLE}>\xBB</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">Sobre m√≠</HeaderLink>
			<HeaderLink href="/contact">Contacto</HeaderLink>
		</div>
        <button class="hamburger" aria-label="open main menu" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill={foreground}><path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/></svg>
        </button>
    </nav>
</header>

<script src="../handlers/hamburger-menu.js"></script>

<style>
	header {
        position: sticky;
        top: 0;
		margin: 0;
		padding: 0;
        height: 70px;
        width: 100%;
        display: flex;
        justify-content: center;
        z-index: 10;
        border-bottom: 2px solid var(--gray);
        height: 70px;
        background-color: var(--background);
	}	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
        width: calc(100% - 2rem);
        max-width: 1200px;
        padding: 1rem;
	}
	nav a {
		margin: 1rem .75rem;
		text-decoration: none;
        color: var(--foreground);
        
    }
	nav a.active {
		text-decoration: none;
	}	

    .internal-links {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        transform: translateY(-100vh);
        background-color: var(--background);
        border-bottom: 2px solid var(--gray);
        z-index: 10;

        &.active{
            transform: translateY(72px);
        }
    }

    nav h2 {
        margin-bottom: 0;
        font-size: 1.25rem;
    }

    .hamburger {
        border: none;
        margin-right: 1rem;
        background-color: transparent;
    }

    .logo-title {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    .icon {
        width: 40px;
        height: 40px;
        margin: 0 1rem;
    }

    @media screen and (min-width: 950px){
        .internal-links {
            position: static;
            flex-direction: row;
            height: initial;
            width: initial;
            transform: translateY(0);
            border-bottom: none;

            &.active {
                transform: translateY(0);
            }
        }

        nav a {
            margin: 0rem 1rem;
        }

        .hamburger{
            display: none;
        }
    }
</style>
